{
  "name": "system-pos",
  "version": "1.0.0",
  "private": true,
  "description": "Point of Sale System with Admin Panel and Mobile POS",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/api",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:mobile": "npm run start --workspace=apps/mobile",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=apps/api",
    "build:admin": "npm run build --workspace=apps/admin",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "test": "./tests/run-all.sh",
    "test:all": "./tests/run-all.sh",
    "test:api": "./tests/run-tests.sh api",
    "test:mobile": "./tests/run-tests.sh mobile",
    "test:admin": "./tests/run-tests.sh admin",
    "test:setup": "./tests/setup-test-env.sh",
    "test:e2e": "./tests/run-detox.sh ios",
    "test:e2e:ios": "./tests/run-detox.sh ios",
    "test:e2e:android": "./tests/run-detox.sh android"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "inventory",
    "sales"
  ],
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/bcrypt": "^6.0.0",
    "babel-jest": "^30.2.0",
    "bcrypt": "^6.0.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3"
  }
}
